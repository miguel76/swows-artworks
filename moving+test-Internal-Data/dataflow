        fb:measurement_unit.rect_size.x ?sizeX ;
        fb:measurement_unit.rect_size.y ?sizeY .
    ?artist
      fb:type.object.name ?artistName .
    ?art_form fb:type.object.name ?artFormName .
    ?art_genre fb:type.object.name ?artGenreName .
    
