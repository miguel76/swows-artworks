    <#global> <#selectedArtwork> ?selectedArtwork.
  }

#  BIND(0 as ?daArtworkIndex).

  GRAPH <#diffArtist> {
    {
      SELECT (COUNT(DISTINCT ?result) AS ?daNum)
      WHERE {
        ?result a sparql-res:result.
      }
    }
    ?result
      a sparql-res:result;
      xml:orderKey ?daArtworkIndexStr;
