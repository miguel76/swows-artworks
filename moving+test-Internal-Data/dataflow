  BIND(CONCAT('Form: ',?artFormName) AS ?artFormStr).
  BIND(CONCAT('Genre: ',?artGenreName) AS ?artGenreStr).
  BIND(CONCAT('Subject: ',?artSubjectName) AS ?artSubjectStr).
